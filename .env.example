# Server Configuration
APP_NAME=monogo
APP_PORT=8080
APP_ENVIRONMENT=development
APP_DEBUG=true
APP_HOST=localhost:8080
APP_SCHEME=http
APP_READ_TIMEOUT=300
APP_WRITE_TIMEOUT=300
APP_IDLE_TIMEOUT=300
APP_BODY_LIMIT=500

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=monogo
DB_SSL_MODE=disable
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=1h

# Log Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=300

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ACCESS_TOKEN_EXPIRY_IN_HOURS=24
JWT_REFRESH_TOKEN_EXPIRY_IN_DAYS=7
JWT_TOKEN_ISSUER=monogo
JWT_TOKEN_AUDIENCE=monogo

# Rate Limiter
RATE_LIMIT_MAX_REQUESTS=100

# Swagger Basic Auth
SWAGGER_USERNAME=user
SWAGGER_PASSWORD=pass